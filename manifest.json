{
  "manifest_version": 2,
  "name": "1337 enhancer",
  "version": "2.6",
  "description": "A zero dependency chrome extension for enhancing your user experience on 1337x torrent sites",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "options_ui": {
    "page": "dist/options.html",
    "open_in_tab": false
  },
  "permissions": ["contextMenus", "storage"],
  "content_scripts": [
    {
      "matches": [
        "*://1337.root.yt/*",
        "*://1337x.to/*",
        "*://1337x.st/*",
        "*://x1337x.ws/*",
        "*://x1337x.eu/*",
        "*://x1337x.se/*",
        "*://1337x.is/*",
        "*://1337x.gd/*"
      ],
      "js": ["dist/content.js"],
      "css": ["dist/content.css"],
      "all_frames": true
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["dist/background.js"],
    "css": ["dist/content.css"]
  }
}
